<odoo>
     <record id="interpol_code" model="ir.sequence">
        <field name="name">Interpol Code</field>
        <field name="code">interpol.request</field>
        <field name="prefix">IR</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>
    <record id="interpol_request_action" model="ir.actions.act_window">
        <field name="name">Interpol Request</field>
        <field name="res_model">interpol.request</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="view_interpol_request_form" model="ir.ui.view">
        <field name="name">Interpol Request</field>
        <field name="model">interpol.request</field>
        <field name="arch" type="xml">
            <form string="Interpol Request">
                <header>

                    <field name="state" widget="statusbar"
                               statusbar_visible="new,assigned,done"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                       <group>
                            <field name="labor_id"/>
                            <field name="national_id" attrs="{'readonly':[('state','!=','new')]}"/>
                            <field name="passport_no" attrs="{'readonly':[('state','!=','new')]}"/>
                            <field name="product" invisible="1"/>
                       </group>
                        <group>
                            <field name="request_date"/>
                            <field name="end_date" attrs="{'readonly':[('state','=','done')]}"/>

                       </group>
                    </group>
                    <notebook>
                        <page string="Interpol Info">
                            <group>
                                <group>
                                    <field name="interpol_no" attrs="{'required':[('state','=','assigned')],'readonly':[('state','=','done')]}"/>
                                    <field name="interpol_start_date" attrs="{'required':[('state','=','assigned')],'readonly':[('state','=','done')]}"/>
                                </group>
                                <group>
                                    <field name="interpol_end_date" attrs="{'required':[('state','=','assigned')],'readonly':[('state','=','done')]}"/>
                                    <field name="attachment" filename="filename" attrs="{'required':[('state','=','assigned')],'readonly':[('state','=','done')]}"/>
                                    <field name="filename" invisible="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_interpol_request_tree">
        <field name="name">Interpol Request Tree</field>
        <field name="model">interpol.request</field>
        <field name="arch" type="xml">
            <tree string="Interpol Request">
                <field name="labor" string="Laborer"/>
                <field name="national_id"/>
                <field name="passport_no"/>
                <field name="state"/>

             </tree>
        </field>
    </record>

    <menuitem id="main_menu_interpol" sequence="14" name="Interpol" parent="menu_recruitment_root" groups="master_data.group_registeration_user"/>
    <menuitem id="menu_interpol_request" sequence="1" name="Interpol Request" parent="main_menu_interpol"
              action="interpol_request_action" />


</odoo>