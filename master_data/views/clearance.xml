<odoo>
     <record id="labor_clearance_code" model="ir.sequence">
        <field name="name">Clearance Code</field>
        <field name="code">labor.clearance</field>
        <field name="prefix">LC</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>
    <record id="labor_clearance_action" model="ir.actions.act_window">
        <field name="name">Clearance</field>
        <field name="res_model">labor.clearance</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="view_labor_clearance_form" model="ir.ui.view">
        <field name="name">Clearance</field>
        <field name="model">labor.clearance</field>
        <field name="arch" type="xml">
            <form >
                <header>

                   <button name="action_confirm" states="new"
                                string="Confirm" type="object"
                                class="oe_highlight"/>
                    <field name="state" widget="statusbar"
                               statusbar_visible="new,confirmed"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="labor_id"/>
                            <field name="passport_no"/>
                            <field name="gender"/>
                            <field name="job_title"/>
                            <field name="contact"/>
                            <field name="agency"/>
                        </group>

                        <group>
                            <field name="lc1"/>
                            <field name="lc2"/>
                            <field name="lc3"/>
                            <field name="district"/>
                        </group>

                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_labor_clearance_tree">
        <field name="name">Clearance Tree</field>
        <field name="model">labor.clearance</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="labor_id" string="Laborer"/>
                <field name="name"/>
                <field name="passport_no"/>
                <field name="gender"/>
                <field name="job_title"/>
                <field name="contact"/>
                <field name="lc1"/>
                <field name="lc2"/>
                <field name="lc3"/>
                <field name="district"/>
                <field name="agency"/>
                <field name="state"/>
             </tree>
        </field>
    </record>
      <menuitem id="menu_clearance_main" sequence="63" name="Clearance" parent="menu_recruitment_root" groups="master_data.group_registeration_user"/>

      <menuitem id="menu_labor_clearance" sequence="1" name="Requests" parent="menu_clearance_main"
              action="labor_clearance_action"/>
</odoo>