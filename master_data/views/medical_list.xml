<odoo>
    <record id="medical_list_code" model="ir.sequence">
        <field name="name">Medical List</field>
        <field name="code">medical.list</field>
        <field name="prefix">BM</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <record id="medical_list_action" model="ir.actions.act_window">
        <field name="name"> Big Medical</field>
        <field name="res_model">medical.list</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="view_medical_list_form" model="ir.ui.view">
        <field name="name">Medical List</field>
        <field name="model">medical.list</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                    <button name="invoice" states="new"
                                string="Invoice" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"
                               statusbar_visible="new,invoiced,done"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                       <field name="product" invisible="1"/>
                       <field name="hospital"/>
                        </group>
                    </group>

                    <notebook>
                     <page string="Requests">
                       <field name="medical_request" domain="[('state','=','hospital'),('hospital','=',hospital)]" attrs="{'readonly':[('state','=','done')]}">
                           <tree editable="top">
                 <field name="labor_id"  string="Laborer" readonly="1"/>
                  <field name="national_id" readonly="1"/>
                 <field name="passport_no" readonly="1"/>
                  <field name="hospital"/>
                 <field name="check_date"/>
                 <field name="deadline"/>
                 <field name="medical_check"/>
                 <field name="reason" attrs="{'invisible':[('medical_check','!=','unfit')],'required':[('medical_check', '=', 'unfit')]}"/>
                 <field name="state" readonly="1"/>
                 <button name="invoice_hospital" states="gcc"
                                string="Hospital" type="object" class="oe_highlight"/>
                           </tree>
                               </field>

                         <button name="action_confirm" states="invoiced"
                                string="Confirm" type="object"
                                class="oe_highlight"/>
                     </page>
                   </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_medical_list_tree">
        <field name="name">Medical List</field>
        <field name="model">medical.list</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="name" />
             </tree>
        </field>
    </record>

    <menuitem id="menu_medical_list"  sequence="2" name="Big Medical Invoice" parent="main_menu_big_medical"
              action="medical_list_action"/>



</odoo>