<odoo>
     <record id="big_medical_code" model="ir.sequence">
        <field name="name">Big Medical Code</field>
        <field name="code">big.medical</field>
        <field name="prefix">Gcc</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>
    <record id="big_medical_action" model="ir.actions.act_window">
        <field name="name">Gcc</field>
        <field name="res_model">big.medical</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="view_big_medical_form" model="ir.ui.view">
        <field name="name">Big Medical</field>
        <field name="model">big.medical</field>
        <field name="arch" type="xml">
            <form string="Big Medical">
                <header>
                    <button name="move_gcc" states="new"
                                string="Gcc" type="object" class="oe_highlight"/>
                    <button name="invoice_hospital" states="gcc"
                                string="Hospital" type="object" class="oe_highlight"/>
                     <button name="action_done" states="hospital"
                                string="Done" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"
                               statusbar_visible="new,gcc,hospital,done"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="labor_id"/>
                            <field name="national_id" readonly="1"/>
                            <field name="passport_no" readonly="1"/>
                        </group>

                    </group>

                    <notebook>
                        <page string="GCC and Big Medical">
                         <group>
                            <group string="GCC">
                                <field name="gcc" attrs="{'required':[('state', '=', 'new')],'readonly':[('state', '!=', 'new')]}"/>
                                <field name="product" invisible="1"/>
                                <field name="booking_date" attrs="{'required':[('state', '=', 'new')],'readonly':[('state', '!=', 'new')]}"/>
                                 <field name="hospital" attrs="{'required':[('state', '=', 'gcc')],'readonly':[('state', '!=', 'gcc')]}"/>
                                 <field name="check_date" attrs="{'required':[('state', '=', 'gcc')],'readonly':[('state', '!=', 'gcc')]}"/>
                                 <field name="deadline" attrs="{'required':[('state', '=', 'gcc')],'readonly':[('state', '!=', 'gcc')]}"/>
                            </group>
                             <group string="Big Medical">
                                 <field name="medical_check" attrs="{'readonly':[('state', '!=', 'hospital')],'required':[('state', '=', 'hospital')]}"/>
                                 <field name="reason" attrs="{'invisible':[('medical_check', '!=', 'unfit')],
                                'required':[('medical_check', '=', 'unfit')],'readonly':[('state', '!=', 'hospital')]}"/>
                             </group>

                        </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_big_medical_tree">
        <field name="name">Big Medical Tree</field>
        <field name="model">big.medical</field>
        <field name="arch" type="xml">
            <tree string="Big Medical">
                <field name="name"/>
                <field name="labor_id" string="Laborer"/>
                <field name="gcc"/>
                <field name="hospital"/>
                <field name="state"/>
             </tree>
        </field>
    </record>
      <menuitem id="main_menu_big_medical" sequence="60" name="Big Medical" parent="menu_recruitment_root" groups="master_data.group_registeration_user"/>
      <menuitem id="menu_big_medical" sequence="1" name="GCC" parent="main_menu_big_medical"
              action="big_medical_action"/>


</odoo>