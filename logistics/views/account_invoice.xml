                    <group>
                        <group>
                            <field name="bl_no"/>
                            <field name="ship_date"/>
                            <field name="ship_via"/>
                        </group>
                        <group>
                            <field name="pol"/>
                            <field name="pod"/>
                            <field name="vessel_voyage_no"/>
                        </group>
                        <group>
                            <field name="packing" widget="selection"/>
                            <field name="gross_weight"/>
                            <field name="net_weight"/>
                            <field name="order_number"/>
                        </group>
                        <group>
                            <field name="container_no"/>
                            <field name="travel_date"/>
                        </group>
                    </group>
                </page>
            </xpath>
