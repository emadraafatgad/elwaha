<odoo>

    <odoo>
    <data>
        <record id="seq_oeh_medical_prescriptions" model="ir.sequence">
            <field name="name">Prescriptions</field>
            <field name="code">oeh.medical.prescriptions</field>
            <field name="prefix">PR</field>
            <field name="padding">5</field>
        </record>

        <record id="oeh_medical_prescriptions_action_tree" model="ir.actions.act_window">
            <field name="name">Prescriptions</field>
            <field name="res_model">oeh.medical.prescriptions</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.ui.view" id="oeh_medical_prescriptions_tree">
            <field name="name">prescriptions.Tree</field>
            <field name="model">oeh.medical.prescriptions</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Clinic">
                    <field name="name"/>
                    <field name="patient_id" />
                    <field name="doctor_id"/>
                    <field name="prescription_date"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="oeh_medical_prescriptions_form">
            <field name="name">Prescriptions</field>
            <field name="model">oeh.medical.prescriptions</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                         <div class="oe_left" style="width: 500px;">
                            <div class="oe_title" style="width: 390px;">
                                <label class="oe_edit_only" for="name" string="prescriptions #"/>
                                <h5><field name="name" class="oe_inline" readonly="1"/></h5>
                            </div>
                         </div>
                        <group colsapn="12">
                            <group >
                                <field name="patient_id"  />
                                <field name="doctor_id"/>
                            </group>
                            <group>
                                <field name="prescription_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Prescription Details">
                                <field name="prescription_line_ids">
                                    <form>
                                        <group>
                                            <field name="medicine_id" />
                                            <field name="qty"/>
                                            <field name="form"/>
                                        </group>
                                        <group >
                                            <field name="dose"/>
                                            <field name="days"/>
                                            <field name="frequency"/>
                                            <field name="note"/>
                                        </group>
                                    </form>
                                <tree string="Prescription" editable="button">
                                     <field name="medicine_id" />
                                    <field name="form"/>
                                    <field name="qty"/>
                                    <field name="dose"/>
                                    <field name="frequency"/>
                                    <field name="days"/>
                                    <field name="note"/>
                                </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_oeh_medical_prescriptions_filter" model="ir.ui.view">
            <field name="name">prescriptions Search</field>
            <field name="model">oeh.medical.prescriptions</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search prescriptions">
                    <separator orientation="vertical"/>
                        <field name="patient_id" string="Patient" select="1"/>
                    <newline/>
                    <group expand="1" string="Group By">
                        <filter string="Patient" name="patient" context="{'group_by':'patient_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <menuitem action="oeh_medical_prescriptions_action_tree" name="prescriptions "  parent="medical_patient_root"  id="oeh_medical_prescriptions_view_menu" sequence="10"/>

    </data>
</odoo>



</odoo>