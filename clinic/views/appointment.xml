    <record id="view_oeh_medical_appointment_filter" model="ir.ui.view">
        <field name="name">Appointment Search</field>
        <field name="model">oeh.medical.appointment</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Appointments">
                <separator orientation="vertical"/>
                    <field name="name" select="1"/>
                    <field name="patient" string="Patient" select="1"/>
                    <field name="clinic" string="clinic" select="1"/>
                    <field name="stage_id" domain="[]"/>
                    <field name="clinic_type" string="beauty/nutrition"/>
                    <field name="app_type" string="From ?"/>
                <newline/>
                <group expand="1" string="Group By">
                    <filter string="Today Appointments" name="today"
                        domain="[('appointment_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="Next" name="next" domain="[('state','not in', ('Completed','Canceled'))]"/>
                    <filter string="Today" name="today" domain="[('appointment_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="Today" name="next_today" domain="[('state','not in', ('Completed','Canceled')),('appointment_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="Patient" name="patient" context="{'group_by':'patient'}"/>
                    <filter string="Source" name="source" context="{'group_by':'app_source'}"/>
                    <filter string="Clinic " name="clinic_type" context="{'group_by':'clinic_type'}"/>
                    <filter string="Type" name="type" context="{'group_by':'app_type'}"/>
                    <filter name="stage" string="Stage" context="{'group_by':'stage_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record model="ir.ui.view" id="oeh_medical_appointment_view">
        <field name="name">Appointments</field>
        <field name="model">oeh.medical.appointment</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
        <form string="Appointment">
            <header>
                <button  name="set_arrived_state"  string="Arrived" states="Scheduled" type="object" class="oe_highlight" />
                <button  name="set_to_completed"  string="Completed" states="Invoiced" type="object" class="oe_highlight" />
                <button  name="action_appointment_invoice_create" states="Arrived" string="Invoice" type="object" class="oe_highlight" />
                <button  name="set_to_cancel" string="Cancel" states="Draft,Arrived" type="object" class="btn-default" />
<!--                <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>-->
                <field name="state" widget="statusbar" statusbar_visible="Scheduled,Arrived,Invoiced,Completed,Canceled" statusbar_colors='{"Scheduled":"blue","Completed":"green","Invoiced":"grey"}'/>
            </header>
            <sheet>
                <div class="oe_button_box" name="buttons">
                    <button type="action" class="oe_stat_button" name="%(oeh_clinic_appointment_action_tree)d" context="{'search_default_patient': patient,'default_patient': patient}" icon="fa-calendar">
                        <field string="Appointments" name="app_count" widget="statinfo"/>
                    </button>
                    <button type="action" class="oe_stat_button" id="appointment_invoice" name="%(account.action_invoice_tree1)d" context="{'search_default_patient': patient,'default_patient': patient}" icon="fa-pencil-square-o">
                        <field string="Invoices" name="invoice_count" widget="statinfo"/>
                    </button>
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" >
                        <label class="oe_edit_only" for="patient"/>
                        <h1><field name="patient" class="oe_inline" /></h1>
                        <h5><field name="name" class="oe_inline" readonly="1"/></h5>
                    </div>
                </div>
                <group>
                    <group>
                        <field name="appointment_date"/>
                        <field name="app_type"/>
                        <field name="app_source"/>
                        <field name="clinic_type" invisible="1"/>
                        <field name="queue"/>
                        <!--                        <field name="appointment_day"/>-->
                    </group>
                    <group>
                        <field name="doctor" options="{'no_create': True}"/>
                        <field name="assist_doctor" options="{'no_create': True}"/>
                        <field name="discount"/>
                        <field name="app_amount"/>
                        <field name="clinic" options="{'no_create': True}" invisible="1"/>
                        <field name="state" invisible="1"/>
                        <field name="arrive_time" invisible="1"/>
                    </group>
                </group>
                <notebook>
                    <page string="Evaluation History" >
                        <field name="evaluation_name_ids" context="{'default_patient_id': patient, 'patient_id' : patient}" >
                            <tree editable="top">
                                <field name="patient_id" invisible="1"/>
                                <field name="name"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Evaluation" >
                        <field name="evaluation_ids"  context="{'default_patient_id': patient, 'patient_id' :patient}" >
                            <form string="Evaluation">
                                <group colspan="12">
                                    <group>
                                        <field name="patient_id"/>
                                    </group>
                                    <group>
                                        <field name="doctor_id"/>
                                        <field name="eval_date"/>
                                    </group>
                                </group>
                                <notebook>
                                    <page string="Evaluation">
                                        <field name="evaluation_name_ids"  >
                                            <tree editable="bottom">
                                                <field name="patient_id" invisible="1"/>
                                                <field name="name"/>
                                            </tree>
                                        </field>
                                    </page>
                                </notebook>
                            </form>
                               <tree string="Evaluation " >
<!--                                    <field name="name"/>-->
                                    <field name="patient_id" />
                                    <field name="service_id" invisible="1"/>
                                    <field name="appointment_id" invisible="1" />
                                    <field name="doctor_id" />
                                    <field name="eval_date"/>
                                </tree>
                        </field>
                    </page>

                    <page string="Prescriptions">
                        <field name="prescription_ids" context="{'default_patient_id': patient, 'patient_id' : patient}">
                            <form string="Prescriptions">
                                <group colspan="12">
                                    <field name="patient_id"/>
                                    <field name="doctor_id"/>
                                    <field name="prescription_date"/>
                                </group>
                                <notebook>
                                    <page string="Prescription Details">
                                        <field name="prescription_line_ids" readonly="0">
                                            <tree editable="bottom">
                                                <field name="medicine_id" />
                                                <field name="form"/>
                                                <field name="qty"/>
                                                <field name="dose"/>
                                                <field name="frequency"/>
                                                <field name="days"/>
                                                <field name="note"/>
                                            </tree>
                                        </field>
                                    </page>
                                </notebook>
                            </form>
                            <tree >
<!--                                <field name="name"/>-->
                                <field name="patient_id" />
                                <field name="service_id" invisible="1"/>
                                <field name="appointment_id" invisible="1" />
                                <field name="doctor_id" />
                                <field name="prescription_date"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Session">
                        <field name="service_ids" context="{'default_patient_id': patient, 'patient_id' : patient}"/>
                    </page>
                    <page string="Comments">
                        <group colspan="12">
                            <field name="comments" nolabel="1"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="oeh_medical_appointment_tree">
        <field name="name">Appointment List</field>
