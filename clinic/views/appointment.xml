    <record id="clinic_appointment_kanban_view_leads" model="ir.ui.view">
            <field name="name">oeh.medical.appointment.lead</field>
            <field name="model">oeh.medical.appointment</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_applicant o_opportunity_kanban" on_create="quick_create" quick_create_view="clinic.quick_create_appointment_form"
                    archivable="false">
                    <field name="stage_id" />
                    <field name="patient"/>
                    <field name="doctor"/>
                    <field name="color"/>
                    <field name="clinic"/>
                    <field name="appointment_date" />
                    <field name="app_source" />
                     <field name="activity_ids" />
                    <field name="activity_state"/>
                    <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}' sum_field="planned_revenue" help="This bar allows to filter the opportunities based on scheduled activities."/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                                <div class="o_dropdown_kanban dropdown">

                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                <div class="o_kanban_image_fill_left d-none d-md-block">
                                    <img t-att-src="kanban_image('oeh.medical.patient', 'image_medium', record.patient.raw_value)" t-att-title="record.patient.value" t-att-alt="record.patient.value" />
                                </div>
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title"><field name="patient"/></strong>
                                        </div>
                                    </div>
                                        <div t-if="record.doctor.value">
                                            <t t-esc="record.doctor.value"/>
                                        </div>

                                        <div t-if="record.appointment_date.value">
                                            <t t-esc="record.appointment_date.value"/>
                                        </div>
                                        <div t-if="record.app_source.value">
                                            <t t-esc="record.app_source.value"/>
                                        </div>
                                    </div>
                            </div>
<!--                                <div class="oe_clear"/>-->

                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

