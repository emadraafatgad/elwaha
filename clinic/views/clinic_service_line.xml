    <record id="oeh_medical_service_line_action_tree" model="ir.actions.act_window">
        <field name="name">Sessions List</field>
        <field name="res_model">oeh.medical.service.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.view" id="oeh_medical_service_line_tree">
        <field name="name">Sessions List</field>
        <field name="model">oeh.medical.service.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Sessions List">
                <field name="name"/>
                <field name="service_type_id"/>
                <field name="session_cost"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="oeh_medical_service_line_form">
        <field name="name">Sessions List</field>
        <field name="model">oeh.medical.service.line</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h2><field name="name" string="Name" placeholder="Sessions Name"/></h2>
                        <field name="service_type_id"/>
                    </div>
                    <group colspan="4">
                        <group col="2">
                            <field name="machine_ids" widget="many2many_tags"  />
                        </group>
                        <group col="2">
                            <field name="session_cost"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Medicines">
                            <field name="medicine_value_ids">
                                <tree string="Medicine" editable="top">
                                    <field name="medicine_id"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

