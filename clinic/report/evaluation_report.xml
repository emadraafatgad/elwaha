<odoo>

        <report
                id="action_clinic_evaluation_report"
                model="oeh.medical.evaluation"
                string="patient evaluation"
                report_type="qweb-pdf"
                name="clinic.clinic_evaluation_report"
                file="clinic.clinic_evaluation_report"
    />

        <template id="clinic_evaluation_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="clinic.clinic_evaluation_report_document" t-lang="o.patient_id.partner_id.lang"/>
                </t>
            </t>
        </template>

    <template id="clinic_evaluation_report_document">
            <t t-call="web.internal_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.patient_id.partner_id.lang})"/>
            <div class="page">
                <div class="oe_structure"/>
                <div></div>
                <div/>
                <div>
                    <h1 class="text-center" style="margin-top:60px;">
                        <span t-esc="o.name"/>
                    </h1>
                </div>
                    <div id="informations" class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2" >
                            <strong>Patient: </strong>
                            <p class="m-0" t-field="o.patient_id.name"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" >
                            <strong>DR:</strong>
                            <p class="m-0" t-field="o.doctor_id.name"/>
                        </div>

                        <div class="col-auto mw-100 mb-2" >
                            <strong>Date: </strong>
                            <p class="m-0" t-field="o.eval_date"/>
                        </div>
                    </div>
                    <div style="font-size:24px;margin-top:50px;">Evaluation</div>
                    <table class="table table-bordered" border="3" style="margin-bottom:700px;font-size:12px;">
<!--                        <thead>-->
<!--                            <tr>-->
<!--                                <th>Evaluation</th>-->
<!--                            </tr>-->
<!--                        </thead>-->
                        <tbody>
                            <tr t-foreach="o.evaluation_name_ids" t-as="e">
                                <td>
                                    <span t-esc="e.name.name"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </t>
    </template>

</odoo>