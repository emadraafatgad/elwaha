<odoo>

        <report
                id="action_clinic_prescription_report"
                model="oeh.medical.prescriptions"
                string="Patient Prescription"
                report_type="qweb-pdf"
                name="clinic.clinic_prescription_report"
                file="clinic.clinic_prescription_report"
    />

        <template id="clinic_prescription_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="clinic.clinic_prescription_report_document" t-lang="o.patient_id.partner_id.lang"/>
                </t>
            </t>
        </template>

    <template id="clinic_prescription_report_document">
            <t t-call="web.internal_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.patient_id.partner_id.lang})"/>
            <div class="page">
                <div class="oe_structure"/>
                <div></div>
                <div/>
                <div>
                    <h1 class="text-center" style="margin-top:60px;">
                        <span t-esc="o.name"/>
                    </h1>
                </div>
                    <div id="informations" class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2" >
                            <strong>Patient: </strong>
                            <p class="m-0" t-field="o.patient_id.name"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" >
                            <strong>DR:</strong>
                            <p class="m-0" t-field="o.doctor_id.name"/>
                        </div>

                        <div class="col-auto mw-100 mb-2" >
                            <strong>Date: </strong>
                            <p class="m-0" t-field="o.prescription_date"/>
                        </div>
                    </div>
                    <div style="font-size:24px;margin-top:50px;">Prescription</div>
                    <table class="table table-bordered" border="3" style="margin-bottom:700px;font-size:12px;">
                        <thead>
                            <tr>
                                <th>Medicine</th>
                                <th>Quantity</th>
                                <th>Form</th>
                                <th>Dose</th>
                                <th>Days</th>
                                <th>Frequency</th>
                                <th>Note</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.prescription_line_ids" t-as="p">
                                <td>
                                    <span t-esc="p.medicine_id.name"/>
                                </td>
                                <td>
                                    <span t-esc="p.qty"/>
                                </td>
                                <td>
                                    <span t-esc="p.form.name"/>
                                </td>
                                <td>
                                    <span t-esc="p.dose"/>
                                </td>
                                <td>
                                    <span t-esc="p.days"/>
                                </td>
                                <td>
                                    <span t-esc="p.frequency.name"/>
                                </td>
                                <td>
                                    <span t-esc="p.note"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
    </template>

</odoo>