<odoo>

        <report
                id="action_clinic_appointment_report"
                model="oeh.medical.appointment"
                string="patient appointment"
                report_type="qweb-pdf"
                name="clinic.clinic_appointment_report"
                file="clinic.clinic_appointment_report"
    />

        <template id="clinic_appointment_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="clinic.clinic_appointment_report_document" t-lang="o.patient.partner_id.lang"/>
                </t>
            </t>
        </template>

    <template id="clinic_appointment_report_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.patient.partner_id.lang})"/>
            <div class="page">
                <div class="oe_structure"/>
                    <h1 class="text-center" style="margin-top:60px;">
                        <span t-esc="o.name"/>
                    </h1>
                    <div id="informations" class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2" >
                            <strong>Patient: </strong>
                            <p class="m-0" t-field="o.patient.name"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" >
                            <strong>DR:</strong>
                            <p class="m-0" t-field="o.doctor.name"/>
                        </div>

                        <div class="col-auto mw-100 mb-2" >
                            <strong>Clinic: </strong>
                            <p class="m-0" t-field="o.clinic"/>
                        </div>

                        <div class="col-auto mw-100 mb-2" >
                            <strong>Appointment date: </strong>
                            <p class="m-0" t-field="o.appointment_date"/>
                        </div>
                    </div>
                    <div style="font-size:24px;margin-top:50px;">Evaluation</div>
                    <table class="table table-bordered" border="3" style="margin-bottom:700px;font-size:12px;">
                        <thead>
                            <tr>
                                <th>Evaluation</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.evaluation_ids" t-as="e">
                                <td>
                                    <span t-esc="e.evaluation.name"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div style="font-size:24px;margin-top:50px;">Prescription</div>
                    <table class="table table-bordered" border="3" style="margin-bottom:700px;font-size:12px;">
                        <thead>
                            <tr>
                                <th>medicine</th>
                                <th>quantity</th>
                                <th>form</th>
                                <th>dose</th>
                                <th>days</th>
                                <th>frequency</th>
                                <th>note</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.prescription_ids" t-as="p">
                                <td>
                                    <span t-esc="p.medicine_id.name"/>
                                </td>
                                <td>
                                    <span t-esc="p.qty"/>
                                </td>
                                <td>
                                    <span t-esc="p.form"/>
                                </td>
                                <td>
                                    <span t-esc="p.dose"/>
                                </td>
                                <td>
                                    <span t-esc="p.days"/>
                                </td>
                                <td>
                                    <span t-esc="p.frequency"/>
                                </td>
                                <td>
                                    <span t-esc="p.note"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </t>
    </template>

</odoo>