<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="visits_plans_action_tree" model="ir.actions.act_window">
            <field name="name">Visits Plans</field>
            <field name="res_model">visit.plan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.ui.view" id="visit_plan_tree">
            <field name="name">Visits Plans</field>
            <field name="model">visit.plan</field>
            <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Visits Plans">
                        <field name="class_id" invisible="1"/>
                        <field name="employee_id"/>
                        <field name="count" invisible="1"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </tree>
                </field>
        </record>

<!--        <record model="ir.ui.view" id="visit_plan_graph">-->
<!--            <field name="name">Visits Plans</field>-->
<!--            <field name="model">visit.plan</field>-->
<!--            <field name="arch" type="xml">-->
