<!--                    <field name="class_id"/>-->
<!--                    <field name="total_visits" type="measure"/>-->
<!--                    <field name="count" type="measure"/>-->
<!--                </graph>-->
<!--            </field>-->
<!--        </record>-->

        <record model="ir.ui.view" id="visits_plans_form">
            <field name="name">Visits plan</field>
            <field name="model">visit.plan</field>
            <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Visits Plan">
                        <sheet>
                            <group colspan="12">
                                <group col="2" string="Info">
                                    <field name="employee_id"/>
                                    <field name="class_plan_id" invisible="1"/>
                                    <field name="class_id" invisible="1"/>
                                    <field name="customer_id" invisible="1"/>
                                    <field name="count" invisible="1"/>
                                </group>
                                <group col="2" string="period">
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                </group>
                                <group colspan="12" string="Rate">
                                    <group col="2">
                                        <field name="coverage" widget="percentpie"/>
                                    </group>
                                    <group col="2">
                                        <field name="total_visits" widget="percentpie" invisible="1"/>
                                    </group>
                                </group>
                            </group>
                            <notebook>
                                <page string="Schedule">
                                    <field name="customer_visit_ids" context="{'default_employee_id': employee_id}" >
                                        <tree editable="bottom">
                                            <field name="customer_id"/>
                                            <field name="class_id"/>
                                            <field name="class_count"/>
                                            <field name="class_remain"/>
                                            <field name="employee_id" />
                                            <field name="title"/>
                                            <field name="start_date" readonly="0" string="Date"/>
                                            <field name="period" widget="float_time"/>
                                            <field name="note" readonly="1"/>
                                            <field name="document_filename" invisible="1"/>
                                            <field name="document" widget="binary" readonly="1" filename="document_filename"/>
                                            <field name="state" readonly="1"/>
                                        </tree>
                                        <form>
                                            <sheet>
                                                <div class="oe_title">
                                                    <h1>
                                                        <field name="name" readonly="1"/>
                                                    </h1>
                                                </div>
                                                <group>
                                                    <group string="Info">
                                                        <field name="customer_id"/>
                                                        <field name="employee_id"  context="{'default_employee_id': parent.employee_id}"/>
                                                        <field name="document_filename" invisible="1"/>
                                                        <field name="document" widget="binary"  filename="document_filename"/>
                                                    </group>
                                                    <group string="Period">
                                                        <field name="start_date"/>
                                                        <field name="period"/>
                                                        <field name="end_date"/>
                                                    </group>
                                                </group>
                                                <notebook>
                                                    <page string="Note">
                                                        <field name="note"/>
                                                    </page>
                                                </notebook>
                                            </sheet>
                                        </form>
                                    </field>
                                </page>
                            </notebook>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </form>
                </field>
        </record>

        <menuitem id="visits_plans_menu" name="Visits Plans"
                  parent="visits_root" action="visits_plans_action_tree" sequence="20"/>

    </data>
</odoo>