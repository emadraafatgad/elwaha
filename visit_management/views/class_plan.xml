<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="class_plan_form_view">
            <field name="name">class.plan.form</field>
            <field name="model">class.plan</field>
            <field name="arch" type="xml">
                <form string="Class Plan Form">
<!--                    <header>-->
<!--                        <button name="confirm_visit" string="Complete" class="oe_highlight" type="object" states="New"/>-->

<!--                        <button name="cancel_visit" string="Cancel" type="object" states="New"/>-->
<!--                        <field name="state" widget="statusbar" statusbar_visible="New,Done,Cancel" />-->
<!--                    </header>-->
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group string="Period">
                            <group>
                                <field name="start_date" required="1"/>
                            </group>
                            <group>
                                <field name="end_date" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Visit Plan">
                                <field name="class_line_ids">
                                    <tree editable="bottom">
                                        <field name="class_id"/>
                                        <field name="count"/>
                                        <field name="remain_count"/>
                                        <field name="done_count"/>
                                    </tree>
                                    <form >
                                        <field name="class_id"/>
                                        <field name="count"/>
                                        <field name="remain_count"/>
                                        <field name="done_count"/>
                                    </form>
                                </field>
                            </page>
                            <page string="Note">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <!-- Paiement tree view -->

        <record model="ir.ui.view" id="class_plan_tree_view">
            <field name="name">class.plan.tree</field>
            <field name="model">class.plan</field>
            <field name="arch" type="xml">
                <tree string="Class Plan Tree">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="class_plan_list_action">
            <field name="name">Class Plan</field>
            <field name="res_model">class.plan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a The First Class Plan
                </p>
            </field>
        </record>

<!--        <menuitem id="class_plan_list_menu" name="Class plan"-->
<!--                  parent="visits_root" sequence="30" action="class_plan_list_action"/>-->

    </data>
</odoo>

