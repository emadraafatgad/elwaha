<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_visits_order_pivot">
        <field name="name">visit.month.pivot</field>
        <field name="model">visit.report</field>
        <field name="arch" type="xml">
            <pivot string="visit Statistics" disable_linking="True">
                <field name="class_id" type="row"/>
<!--                <field name="customer_id" type="row"/>-->
                <field name="start_date" interval="month" type="col"/>
                <field name="total_visits" type="measure"/>
                <field name="done_visits" type="measure"/>
                <field name="postpone" type="measure"/>
                <field name="cancel" type="measure"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="view_visits_graph">
        <field name="name">visit.month.graph</field>
        <field name="model">visit.report</field>
        <field name="arch" type="xml">
            <graph string="Visits Statistics" type="bar" >
                <field name="class_id" type="row"/>
<!--                <field name="customer_id" type="col"/>-->
                <field name="start_date" interval="month" type="col"/>
                <field name="postpone" type="measure"/>
                <field name="cancel" type="measure"/>
                <field name="done_visits" type="measure"/>
                <field name="total_visits" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_visits_report_all" model="ir.actions.act_window">
        <field name="name">Vistis Analysis</field>
        <field name="res_model">visit.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph,pivot</field>
        <field name="view_id"></field>  <!-- force empty -->
        <field name="help">Visits Analysis allows you to easily check and analyse your company Vists history and performance. From this menu you can track your negotiation performance, the delivery performance of your vendors, etc.</field>
    </record>

    <menuitem id="class_visits_list_menu" name="Visits Analysis"
              parent="visits_root" sequence="30" action="action_visits_report_all"/>

</odoo>
