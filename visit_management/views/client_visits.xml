<!--                </graph>-->
<!--            </field>-->
<!--        </record>-->
        <record model="ir.actions.act_window" id="customer_visit_list_action">
            <field name="name">Client Visits</field>
            <field name="res_model">customer.visit</field>
            <field name="view_type">form</field>
            <field name="view_mode">calendar,tree,form,search</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a The First Client Visit
                </p>
            </field>
        </record>

        <menuitem id="customer_visit_menu" name="Client Visits"
                  parent="visits_root" sequence="10" action="customer_visit_list_action"/>

    </data>
</odoo>

