<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
         <record id="customer_visits_ids" model="ir.sequence">
            <field name="name">Customer Visits</field>
            <field name="code">customer.visit</field>
            <field name="prefix">V</field>
            <field name="padding">4</field>
        </record>

        <record model="ir.ui.view" id="customer_visit_form_view">
            <field name="name">customer.visit.form</field>
            <field name="model">customer.visit</field>
            <field name="arch" type="xml">
                <form string="Payment Infos Form">
                    <header>
                        <button name="confirm_visit" confirm="You Will Mark This Visit As Completed" string="Complete" class="btn btn-success" type="object" states="New,Postpone"/>
                        <button name="postpone_visit" string="Postpone" type="object" class="btn btn-warning" states="New" />
                        <button name="cancel_visit" confirm="You Will Cancel This Visit" string="Cancel" class="btn btn-danger" type="object" states="New,Postpone"/>
                        <field name="state" widget="statusbar" statusbar_visible="New,Done,Cancel" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h3>
                                <field name="name" readonly="1"/>
                            </h3>
                        </div>
                        <group>
                            <field name="title"/>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <group string="Info">
                                <field name="customer_id"/>
                                <field name="class_id" />
                                <field name="active" invisible="1"/>
                                <field name="document_filename" invisible="1"/>
                                <field name="document" widget="binary"  filename="document_filename"/>
                            </group>
                            <group string="Period">
                                <field name="start_date"/>
                                <field name="period" widget="float_time"/>
                                <field name="end_date" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Note">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <!-- Paiement tree view -->

        <record model="ir.ui.view" id="customer_visit_tree_view">
            <field name="name">customer.visit.tree</field>
            <field name="model">customer.visit</field>
            <field name="arch" type="xml">
                <tree string="Visits Tree">
                    <field name="name"/>
                    <field name="title"/>
                    <field name="employee_id"/>
                    <field name="customer_id"/>
                    <field name="class_id" />
                    <field name="start_date"/>
                    <field name="period" widget="float_time"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_client_visits_calendar">
            <field name="name">Customer Visit Calendar</field>
            <field name="model">customer.visit</field>
            <field name="arch" type="xml">
                <calendar string="Visits" date_start="start_date" color="customer_id" quick_add="False" mode="month">
                    <field name="title"/>
                    <field name="customer_id"/>
                    <field name="class_id"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <record id="customer_visit_search" model="ir.ui.view">
            <field name="name">customer.visit.select</field>
            <field name="model">customer.visit</field>
            <field name="arch" type="xml">
                <search string="Search Visits">
                    <field name="name" string="Doctor Visits"/>
                    <separator/>
                    <field name="state"/>
                    <field name="employee_id"/>
                    <field name="class_id" />
                    <filter name="New" string="New"
                            domain="[('state','=','New')]"
                            help="Request in New"/>
                    <filter name="Complete" string="Complete"
                            domain="[('state','=','Done')]"
                            help="Get Completed Visits"/>
                    <filter name="canceled_visits" string="Cancel"
                            domain="[('state','=','Canceled')]"
                            help="Request is Postpone"/>
                    <filter name="postponed_state" string="Postpone"
                            domain="[('state','=','Postponed')]"
                            help="Request is Postpone"/>
                    <filter name="start_date_filter" string="Start Date" date="start_date" default_period="this_week"/>
                    <group expand="0" string="Group By...">
                        <filter string="Employee" icon="terp-personal" name="employee_id"
                                domain="[]"
                                context="{'group_by':'employee_id'}"/>
                        <filter string="Doctor" icon="terp-personal" name="customer_id"
                                domain="[]"
                                context="{'group_by':'customer_id'}"/>
                        <filter string="Class" icon="terp-personal" name="class_id"
                                domain="[]"
                                context="{'group_by':'class_id'}"/>
                        <filter string="State" icon="terp-personal" name="state"
                                domain="[]"
                                context="{'group_by':'state'}"/>

                    </group>
                </search>
            </field>
        </record>
